<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme01.appBackColor"
    tools:context="com.btsplusplus.fowallet.ActivityTradingPairMgr">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/layout_back_from_trading_pair_mgr"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_btn_back"/>
                <TextView
                    style="@style/kNavigationBarTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/kBtnBack"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="交易对管理"
                style="@style/kNavigationBarTextStyle" />


        </FrameLayout>


            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/layout_trade_asset_from_trading_pair_mgr"
                        android:orientation="vertical"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="13dp"
                            android:textColor="@color/theme01.textColorGray"
                            android:text="交易资产"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_trade_asset_from_trading_pair_mgr"
                            android:layout_marginTop="3dp"
                            android:textSize="16dp"
                            android:textColor="@color/theme01.textColorMain"
                            android:text="USD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_switch_from_trading_pair_mgr"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_switch_from_trading_pair_mgr"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:src="@drawable/icon_switch" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_quote_asset_from_trading_pair_mgr"
                        android:orientation="vertical"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="13dp"
                            android:textColor="@color/theme01.textColorGray"
                            android:text="报价资产"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_quote_asset_from_trading_pair_mgr"
                            android:layout_marginTop="3dp"
                            android:textSize="16dp"
                            android:textColor="@color/theme01.textColorMain"
                            android:text="BTS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>

                <View android:layout_height="1dp" android:layout_marginTop="12dp" android:background="@color/theme01.bottomLineColor" android:layout_width="fill_parent"></View>

                <Button
                    android:layout_marginTop="20dp"
                    android:id="@+id/btn_add_from_trading_pair_mgr"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center|center_vertical"
                    android:padding="5dp"
                    android:textAllCaps="false"
                    android:text="添加"
                    style="@style/kMainButtonStyle" />

                <TextView
                    android:id="@+id/tv_my_custom_n_trading_pair_mgr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme01.textColorMain"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                    android:text="我的交易对(0)个"
                    />

                <ScrollView
                    android:layout_marginTop="20dp"
                    android:fillViewport="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/layout_trading_pairs_from_trading_pair_mgr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </ScrollView>


            </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
