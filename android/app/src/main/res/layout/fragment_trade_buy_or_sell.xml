<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.btsplusplus.fowallet.FragmentTradeBuyOrSell">


        <LinearLayout
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="0dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 左右结构） -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 左边区域 -->
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <!-- 价格 -->
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/theme01.textColorNormal"
                        android:text="价格 CNY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:background="@drawable/rectangle_border_drawable"
                        android:id="@+id/et_price_from_trade_buy_or_sell"
                        android:textSize="14dp"
                        android:maxLength="24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:layout_marginTop="5dp"
                        style="@style/kTextFieldDecimalPad"
                        android:hint="请输入价格"/>

                    <!-- 数量 -->
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"
                        android:textColor="@color/theme01.textColorNormal"
                        android:text="数量 BTS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:background="@drawable/rectangle_border_drawable"
                        android:id="@+id/et_quantity_from_trade_buy_or_sell"
                        android:textSize="14dp"
                        android:maxLength="24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:layout_marginTop="5dp"
                        style="@style/kTextFieldDecimalPad"
                        android:hint="请输入数量"/>

                    <!-- 数量滑动条 -->
                    <SeekBar
                        android:padding="0dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:layout_marginTop="5dp"
                        android:thumbOffset="0dp"
                        android:id="@+id/seekbar_from_trade_buy_or_sell"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:max="400"
                        android:progress="1" />

                    <!-- 交易额 -->
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"
                        android:textColor="@color/theme01.textColorNormal"
                        android:text="交易额 CNY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:background="@drawable/rectangle_border_drawable"
                        android:id="@+id/et_amount_from_trade_buy_or_sell"
                        android:textSize="14dp"
                        android:maxLength="24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:layout_marginTop="5dp"
                        style="@style/kTextFieldDecimalPad"
                        android:hint="请输入交易额"/>

                    <!-- 可用 -->
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="5dp"
                            android:textSize="12dp"
                            android:textColor="@color/theme01.textColorNormal"
                            android:text="@string/kLableAvailable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_available_from_trade_buy_or_sell"
                            android:gravity="right"
                            android:layout_marginTop="5dp"
                            android:textSize="12dp"
                            android:textColor="@color/theme01.textColorNormal"
                            android:text="19.9992923819BTS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <!-- 手续费 -->
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="5dp"
                            android:textSize="12dp"
                            android:textColor="@color/theme01.textColorNormal"
                            android:text="@string/kVcConfirmTipFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_fee_from_trade_buy_or_sell"
                            android:gravity="right"
                            android:layout_marginTop="5dp"
                            android:textSize="12dp"
                            android:textColor="@color/theme01.textColorNormal"
                            android:text="0.1%"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!-- 提交按钮 -->
                    <Button
                        android:layout_marginTop="5dp"
                        android:id="@+id/btn_submit_from_trade_buy_or_sell"
                        android:layout_width="match_parent"
                        style="@style/kMainButtonStyle"
                        android:gravity="center|center_vertical"
                        android:padding="5dp"
                        android:textAllCaps="false"
                        android:text="买入BTS" />

                    <!-- 交易历史 -->
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="15dp"
                        android:textColor="@color/theme01.textColorMain"
                        android:text="交易历史"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />


                    <ScrollView
                        android:id="@+id/sv_trade_histroy_from_trade_buy_or_sell"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/layout_trade_histroy_from_trade_buy_or_sell"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></LinearLayout>
                    </ScrollView>

                </LinearLayout>


                <!-- 右边区域 -->
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <!-- 卖出区域 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="28dp">

                            <!-- 是否自己的挂单（占位） -->
                            <TextView
                                android:text=""
                                android:textSize="11dp"
                                android:layout_width="12dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textSize="11dp"
                                android:textColor="@color/theme01.textColorGray"
                                android:text="档"
                                android:layout_width="16dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textSize="11dp"
                                android:textColor="@color/theme01.textColorGray"
                                android:text="价格"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:paddingRight="5dp"
                                android:textSize="11dp"
                                android:textColor="@color/theme01.textColorGray"
                                android:text="数量"
                                android:gravity="right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <ScrollView
                            android:id="@+id/sv_sell_list_from_trade_buy_or_sell"
                            android:layout_width="match_parent"
                            android:layout_height="260dp">

                            <LinearLayout
                                android:id="@+id/layout_sell_list_from_trade_buy_or_sell"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </LinearLayout>
                        </ScrollView>

                    </LinearLayout>






                    <!-- 价格 涨跌幅百分比 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_height="48dp">

                        <TextView
                            android:id="@+id/tv_last_price_from_trade_buy_or_sell"
                            android:textSize="17dp"
                            android:text="0.236"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_last_price_rate_from_trade_buy_or_sell"
                            android:textSize="12dp"
                            android:text="+0.63%"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <!-- 买入区域 -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ScrollView
                            android:id="@+id/sv_buy_list_from_trade_buy_or_sell"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/layout_buy_list_from_trade_buy_or_sell"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"></LinearLayout>


                        </ScrollView>
                    </FrameLayout>


                </LinearLayout>
            </LinearLayout>




            <!-- （已取消这布局）下部分（交易历史区域 和 买单区域） -->
